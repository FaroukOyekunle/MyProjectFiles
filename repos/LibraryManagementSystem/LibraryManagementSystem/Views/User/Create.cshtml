@using LibraryManagementSystem.Enums
@model LibraryManagementSystem.Entities.User

@{
    ViewData["Title"] = "Create";
}




<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:aqua">Register User.</h1>
                    <p class="tagcolor" style="color:azure">Please fill in this form to create an account.</p>
                    <hr class="tagcolor" style="color:chocolate">

                </div>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                       
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                       
                    </div>

                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="GenderType" class="control-label"></label>
                            <select asp-for="GenderType" class="form-control">
                                Select User Type
                                <option value="@GenderType.Male"> Male</option>
                                <option value="@GenderType.Female"> Female</option>
                                <option value="@GenderType.Amaphrodite"> Amaphrodite</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="UserType" class="control-label"></label>
                            <select asp-for="UserType" class="form-control">
                                Select User Type
                                <option value="@UserType.Admin"> Admin</option>
                                <option value="@UserType.Librarian"> Librarian</option>
                                <option value="@UserType.LibraryUser"> Library User</option>
                            </select>
                            <span asp-validation-for="UserType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-row">

                        <div class="form-group col-sm-6">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Select User Photo</label>
                            <input name="UserPhoto" type="file" class="form-control" />
                        </div>
                    </div>


                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
